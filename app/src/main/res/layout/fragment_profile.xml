<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp">
                    <ImageView
                        android:id="@+id/img_profile_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ico_avatar" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/back_avatar_white" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginLeft="25dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_profile_name"
                        style="@style/txt_b_b_20_n"
                        android:text="@string/nav_name" />

                    <TextView
                        android:id="@+id/lbl_profile_location"
                        android:layout_marginTop="10dp"
                        style="@style/txt_b_r_12_n"
                        android:text="@string/nav_location" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lbl_profile_payed"
                        style="@style/txt_b_r_20_n"
                        android:text="140"/>
                    <TextView
                        style="@style/txt_b_b_13_n"
                        android:text="@string/nav_lbl_pay"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lbl_profile_func"
                        style="@style/txt_b_r_20_n"
                        android:text="120"/>
                    <TextView
                        style="@style/txt_b_b_13_n"
                        android:text="@string/nav_lbl_func"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lbl_profile_rfunc"
                        style="@style/txt_b_r_20_n"
                        android:text="24 K"/>
                    <TextView
                        style="@style/txt_b_b_13_n"
                        android:text="@string/nav_lbl_rfunc"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="40dp">
                <TextView
                    style="@style/txt_b_r_16_n"
                    android:layout_marginLeft="20sp"
                    android:text="@string/profile_classname"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/lbl_profile_classname"
                    style="@style/txt_b_r_16_n"
                    android:layout_marginRight="20sp"
                    android:alpha="0.5"
                    android:text="Class"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="40dp">
                <TextView
                    style="@style/txt_b_r_16_n"
                    android:layout_marginLeft="20sp"
                    android:text="@string/profile_last_update"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/lbl_profile_regdate"
                    style="@style/txt_b_r_16_n"
                    android:layout_marginRight="20sp"
                    android:alpha="0.5"
                    android:text="2019-05-11 07:18:17"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_profile_pay"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_back_shadow_15">
                <TextView
                    android:layout_marginLeft="20sp"
                    style="@style/txt_b_r_16_n"
                    android:layout_gravity="center_vertical"
                    android:text="@string/profile_wechat_payment"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ico_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_profile_comment"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_back_shadow_15">
                <TextView
                    android:layout_marginLeft="20sp"
                    style="@style/txt_b_r_16_n"
                    android:layout_gravity="center_vertical"
                    android:text="@string/profile_comment"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ico_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_profile_report"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_back_shadow_15">
                <TextView
                    android:layout_marginLeft="20sp"
                    style="@style/txt_b_r_16_n"
                    android:layout_gravity="center_vertical"
                    android:text="@string/profile_function_report"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ico_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_profile_guide"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_back_shadow_15">
                <TextView
                    android:layout_marginLeft="20sp"
                    style="@style/txt_b_r_16_n"
                    android:layout_gravity="center_vertical"
                    android:text="@string/guide_title"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ico_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_profile_support"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_back_shadow_15">
                <TextView
                    android:layout_marginLeft="20sp"
                    style="@style/txt_b_r_16_n"
                    android:layout_gravity="center_vertical"
                    android:text="@string/profile_support"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ico_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_profile_logout"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/item_back_shadow_15">
                <TextView
                    style="@style/txt_b_r_16_n"
                    android:text="@string/menu_logout"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
