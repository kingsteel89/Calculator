<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/calc_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="1"
        android:inputType="none"
        android:gravity="right|center"
        android:textSize="70sp"
        android:paddingRight="10dp"
        android:cursorVisible="false"
        android:maxLength="9"
        android:textColor="@color/txt_black"
        android:background="@color/background"/>

    <LinearLayout
        style="@style/llt_calc_parent"
        android:id="@+id/operation_buttons" >
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/action_clear"
            android:textColor="#000"
            android:background="@drawable/text_bg2"
            android:text="@string/clear"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/action_change_sign"
            android:layout_marginRight="15dp"
            android:textColor="#000"
            android:background="@drawable/text_bg2"
            android:text="@string/change_sign"
            style="@style/txt_calc_key" />

        <TextView
            android:id="@+id/action_percent"
            android:textColor="#000"
            android:background="@drawable/text_bg2"
            android:text="@string/percent"
            style="@style/txt_calc_key" />

        <TextView
            android:id="@+id/divide"
            android:background="@drawable/text_bg3"
            android:text="@string/divide"
            android:textColor="#fff"
            style="@style/txt_calc_key" />
    </LinearLayout>

    <LinearLayout
        style="@style/llt_calc_parent"
        android:id="@+id/number_buttons_row_1" >
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/one"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="1"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/two"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="2"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/three"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="3"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/multiply"
            android:background="@drawable/text_bg3"
            android:textColor="#fff"
            android:text="x"
            style="@style/txt_calc_key"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_buttons_row_2"
        style="@style/llt_calc_parent">
        <TextView
            android:id="@+id/four"
            android:layout_marginLeft="15dp"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="4"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/five"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="5"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/six"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="6"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/subtract"
            android:background="@drawable/text_bg3"
            android:textColor="#fff"
            android:text="-"
            style="@style/txt_calc_key"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_buttons_row_3"
        style="@style/llt_calc_parent">
        <TextView
            android:id="@+id/seven"
            android:layout_marginLeft="15dp"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="7"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/eight"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="8"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/nine"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="9"
            style="@style/txt_calc_key"
            />
        <TextView
            android:id="@+id/add"
            android:background="@drawable/text_bg3"
            android:textColor="#fff"
            android:text="+"
            style="@style/txt_calc_key"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_buttons_row_4"
        style="@style/llt_calc_parent">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/zero"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="0"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/decimal"
            android:background="@drawable/text_bg1"
            android:textColor="#fff"
            android:text="."
            style="@style/txt_calc_key"
            />

        <TextView
            android:id="@+id/equals"
            android:background="@drawable/text_bg3"
            android:textColor="#fff"
            android:text="="
            style="@style/txt_calc_key"
            />
    </LinearLayout>

</LinearLayout>
