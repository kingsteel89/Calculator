<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llt_item_spec"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txt_hint"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/llt_item_param"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/txt_hint"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/txt_item_param"
            android:layout_marginLeft="15dp"
            style="@style/txt_w_r_12"
            android:text="1 Parameters"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_item_name"
                style="@style/txt_b_r_16_n"
                android:text="@string/item_function_name"/>
            <TextView
                android:id="@+id/lbl_item_date"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:alpha="0.5"
                style="@style/txt_b_r_12_n"
                android:text="2019-05-11 00:00:00"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_list_item_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_check"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
